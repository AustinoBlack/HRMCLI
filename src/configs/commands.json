{
    "pcscli": {
        "cmd": {
            "syntax": "pcscli cmd -c [command] {-help} <-i ID>",
            "syntax_details": [
                "{-help}  - optional: displays this help message",
                "[command] - any valid ipmitool command",
                "<-i ID>   - node index"
            ],
            "help_msg": [
                "Use for direct ipmitool command passthrough. Useful for testing!",
                "Sample Usage:",
                "pcscli -c cmd user list -i 1"
            ]
        },
        "change password": {
            "syntax": "pcscli change password",
            "syntax_details": [
                "Alias command for sudo chpasswd"
            ],
            "help_msg": [
                "Changes the password for the pcscli user.",
                "You will be prompted to enter a new password.",
                "Sample Usage:",
                "pcscli change password"
            ]
        },
        "add node": {
            "syntax": "pcscli add node",
            "syntax_details": [
                "Prompts the user to add credentials for a new node"
            ],
            "help_msg": [
                "This command prompts the user to add a new node to the IPMI configuration.",
                "You will be asked to enter the node's IP, username, and password.",
                "Sample Usage:",
                "pcscli add node"
            ]
        },
        "edit node": {
            "syntax": "pcscli edit node",
            "syntax_details": [
                "Prompts the user to edit credentials for an existing node"
            ],  
            "help_msg": [
                "This command allows you to modify the credentials of an existing node.",
                "You can change the IP, username, or password of the selected node.",
                "Sample Usage:",
                "pcscli edit node"
            ]
        },
        "remove node": {
            "syntax": "pcscli remove node",
            "syntax_details": [
                "Prompts the user to remove an existing node from pcscli"
            ],
            "help_msg": [
                "Removes an existing node from the IPMI configuration.",
                "You will be prompted to confirm the deletion before proceeding.",
                "Sample Usage:",
                "pcscli remove node"
            ]
        },
        "list nodes": {
            "syntax": "pcscli list node",
            "syntax_details": [
                ""
            ],  
            "help_msg": [
                "Lists all currently configured IPMI nodes, displaying their index and IP address.",
                "Sample Usage:",
                "pcscli list nodes"
            ]
        },
        "status": {
            "syntax": "pcscli status",
            "syntax_details": [
                ""
            ],  
            "help_msg": [
                "Displays the current status of PCSCLI, including system info and node configurations.",
                "Sample Usage:",
                "pcscli status"
            ]   
        },
        "backup config": {
            "syntax": "pcscli backup config",
            "syntax_details": [
                "creates a backup of the ipmi config file"
            ],
            "help_msg": [
                "Creates a backup of the current IPMI configuration file.",
                "Backups are stored in /opt/PCSCLI/backups/ with a timestamp.",
                "Sample Usage:",
                "pcscli backup config"
            ]
        },
        "restore config": {
            "syntax": "pcscli restore config",
            "syntax_details": [
                "restores a backup of the ipmi config file"
            ],
            "help_msg": [
                "Restores a previously created backup of the IPMI configuration.",
                "You will be prompted to select a backup file from available options.",
                "Sample Usage:",
                "pcscli restore config"
            ]
        },
        "test connection": {
            "ipmi_cmd": "chassis status",
            "syntax": "pcscli test connection {-help} <-i ID>",
            "syntax_details": [
                "{-help} - optional: displays this help message",
                "<-i ID>  - node index"
            ],
            "help_msg": [
                "This command is used to verify ipmi credentials and network configuration.",
                "Sample Usage:",
                "pcscli test connection -i 1"
            ]  
        },
        "general_help": {
            "syntax": "pcscli [operation] {-help}",
            "help_msg": [
                "This command provides a list of available operations under the 'pcscli' prefix.",
                "List of available operations:",
                "- status",
                "- cmd",
                "- change password",
                "- add node",
                "- edit node",
                "- remove node",
                "- list nodes",
                "- backup config",
                "- restore config",
                "- test connection <-i ID>"
            ]
        }
    },

    "set": {
        "sys power on": {
            "ipmi_cmd": "power on",
            "syntax": "set sys power on {-help} <-i ID>",
            "syntax_details": [
                "{-help} - optional: displays this help message",
                "<-i ID>  - node index"
            ],
            "help_msg": [
                "This command sends an IPMI signal to turn the blade on.",
                "Sample Usage:",
                "set power on -i 1"
            ]
        },
        "sys power off": {
            "ipmi_cmd": "power off",
            "syntax": "set sys power off {-help} <-i ID>",
            "syntax_details": [
                "{-help} - optional: displays this help message",
                "<-i ID>  - node index"
            ],
            "help_msg": [
                "This command sends an IPMI signal to turn the blade off.",
                "Sample Usage:",
                "set power off -i 1"
            ]
        },
        "sys led on": {
            "ipmi_cmd": "chassis identify force",
            "syntax": "set sys led on {-help} <-i ID>",
            "syntax_details": [
                "{-help} - optional: displays this help message",
                "<-i ID>  - node index"
            ],
            "help_msg": [
                "Turns on the chassis attention LED.",
                "Sample Usage:",
                "set sys led on -i 1"
            ]
        },
        "sys led off": {
            "ipmi_cmd": "chassis identify 0",
            "syntax": "set sys led off {-help} <-i ID>",
            "syntax_details": [
                "{-help} - optional: displays this help message",
                "<-i ID>  - node index"
            ],
            "help_msg": [
                "Turns off the chassis attention LED.",
                "Sample Usage:",
                "set sys led off -i 1"
            ]
        },
        "sys sel clear": {
            "ipmi_cmd": "sel clear",
            "syntax": "set sys sel clear {-help} <-i ID>",
            "syntax_details": [
                "{-help} - optional: displays this help message",
                "<-i ID>  - node index"
            ],
            "help_msg": [
                "Clears the node's SEL log.",
                "Sample Usage:",
                "set sys sel clear -i 1"
            ]
        },
        "general_help": {
            "syntax": "set [operation] {-help}",
            "help_msg": [
                "Provides a list of available operations under the 'set' prefix.",
                "List of available operations:",
                "- sys power on",
                "- sys power off",
                "- sys led on",
                "- sys led off",
                "- sys sel clear"
            ]
        }
    },

    "sh": {
        "sys info": {
            "ipmi_cmd": "mc info", 
            "syntax": "sh sys info {-help} <-i ID>",
            "syntax_details": [
                "{-help} - optional: displays this help message",
                "<-i ID>  - node index"
            ],
            "help_msg": [
                "Prints the system's information for a given node index.",
                "Sample Usage:",
                "sh sys info -i 1"
            ]
        },
        "sys fru": {
            "ipmi_cmd": "fru print",
            "syntax": "sh sys fru {-help} <-i ID>",
            "syntax_details": [
                "{-help} - optional: displays this help message",
                "<-i ID>  - node index"
            ],
            "help_msg": [
                "Prints the system's FRU (Field Replaceable Unit) information.",
                "Sample Usage:",
                "sh sys fru -i 1"
            ]
        },
        "sys sel": {
            "ipmi_cmd": "sel elist",
            "syntax": "sh sys sel {-help} <-i ID>",
            "syntax_details": [
                "{-help} - optional: displays this help message",
                "<-i ID>  - node index"
            ],
            "help_msg": [
                "Prints the node's SEL log.",
                "Sample Usage:",
                "sh sys sel -i 1"
            ]
        },
        "sys sdr": {
            "ipmi_cmd": "sdr list",
            "syntax": "sh sys sdr {-help} <-i ID>",
            "syntax_details": [
                "{-help} - optional: displays this help message",
                "<-i ID>  - node index"
            ],
            "help_msg": [
                "Prints the node's Sensor Data Record (SDR).",
                "Sample Usage:",
                "sh sys sdr -i 1"
            ]
        },
        "general_help": {
            "syntax": "sh [operation] {-help}",
            "help_msg": [
                "Provides a list of available operations under the 'sh' prefix.",
                "List of available operations:",
                "- sys info",
                "- sys fru",
                "- sys sel",
                "- sys sdr"
            ]
        }
    }
}

